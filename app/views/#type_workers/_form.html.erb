<div class="row" style="justify-content: center;" >
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <%= form_for @type_worker do |f| %>
          <% if @type_worker.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@type_worker.errors.count, "error") %> prohibited this type_worker from being saved:</h2>

              <ul>
              <% @type_worker.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
