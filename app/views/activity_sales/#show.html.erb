<div class="container-fluid">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row justify-content-between">
        <div class="col align-items-center pt-2">
          <h2 class="font-weight-bolder text-primary">Rencana Kunjungan Sales</h2>
        </div>
      </div>
    </div>
    <br>
    <div class="card-body py-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td width="30%">Kategori</td>
            <td><%= @sales_visit_plan.category.try(:name) %></td>
          </tr>
          <tr>
            <td width="30%">Nama entitas lokasi pengadaan</td>
            <td><%= @sales_visit_plan.nama_entitas_lokasi_pengadaan%></td>
          </tr>
          <tr>
            <td width="30%">Jenis pekerjaan</td>
            <td><%= @sales_visit_plan.jenis_pekerjaan%></td>
          </tr>
          <tr>
            <td width="30%">Klaster</td>
            <td><%= @sales_visit_plan.cluster%></td>
          </tr>
          <tr>
            <td width="30%">Estimasi tgl peretemuan</td>
            <td><%= @sales_visit_plan.estimasi_tgl_peretemuan%></td>
          </tr>
          <tr>
            <td width="30%">Nama</td>
            <td><%= @sales_visit_plan.nama%></td>
          </tr>

        </tbody>
      </table>
    </div>
    <div class="card-footer py-3 ">
      <a href="<%= data_companies_path %>" class="btn btn-info">Kembali</a>
    </div>
  </div>
</div>