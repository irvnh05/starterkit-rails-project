<div class="row" style="justify-content: center;" >
  <div class="col-lg-12">
    <div class="">
      <div class="card-body">
        <%# <%= form_for :project_potentials, url: project_potentials_create_path, method: :post, html: {class: "form-horizontal", role: "form"} do |f| %> 
        <%= form_for @project_potential, multipart: true do |f| %>
          <% if @project_potential.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@project_potential.errors.count, "error") %> prohibited this site_project from being saved:</h2>
              <ul>
              <% @project_potential.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="form-row">
            <div class="form-group col">
              <label>Nama Entitas</label>
              <%= f.text_field :nama_entitas, class: "form-control" %>
              </div>
          </div>
          
          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Cluster</label>
               <%= select_tag :cluster, options_for_select(["Internal SH Gas","External (Pertamina Grup)","External swasta","External pemerintah",'External BUMN/BUMD'], params[:pilihan]), prompt: "-- Pilih Cluster --", class: "form-control", name: "project_potential[cluster]"  %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Lokasi</label>
              <%= f.text_field :lokasi, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Judul Tender</label>
              <%= f.text_field :judul_tender, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Nilai</label>
               <%= select_tag :nilai, options_for_select(["IDR(RP)","USD($)"], params[:pilihan]), prompt: "-- Pilih Nilai(IDR) --", class: "form-control nilai" %>
<%
=begin
%>
                <%= f.text_field :nilai, list: "nama_entitas" , class: "form-control select-company"%>
              <datalist id="nama_entitas" >
                <%= select_tag :nilai, options_for_select(["IDR(RP)","USD($)"], params[:pilihan]), id: 'company-id', prompt: "-- Pilih Cluster --", class: "form-control" %>
              </datalist>
<%
=end
%>              
            </div>
          </div>
          
          <div class="form-row form-rp">
            <div class="form-group col">
              <label for="intpuCluster">Nominal (RP)</label>
              <%= f.number_field :lini_bisnis, class: "form-control" %>
            </div>
          </div>



          <div class="form-row form-usd">
            <div class="form-group col">
              <label for="intpuCluster">Nominal ($)</label>
              <%= f.number_field :lini_bisnis, class: "form-control" %>
            </div>
          </div>


          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Lini Bisnis</label>
              <%= f.text_field :lini_bisnis, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Jadwal Perkiraan Tender</label>
              <%= f.date_field :jadwal_perkiraan_tender, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Durasi Proyek (Bulan)</label>
              <%= f.text_field :durasi_proyek, class: "form-control" %>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Remark</label>
              <%= select_tag :remark, options_for_select(["SINERGI","NON SINERGI","EXTERNAL"], params[:pilihan_remark]), prompt: "-- Pilih Remark --", class: "form-control", name: "project_potential[remark]"%>
              <%# <%= f.text_field :remark, class: "form-control" %> 
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Konfirmasi (%)</label>
              <%= select_tag :konfirmasi, options_for_select(["100%","75%","50%"], params[:pilihan_konfirmasi]), prompt: "-- Pilih Konfirmasi --", class: "form-control" %>
              <%# <%= f.number_field :konfirmasi, class: "form-control" %> 
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col">
              <label for="intpuCluster">Informasi Tambahan</label>
              <%= f.text_field :informasi_tambahan, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group">
           <button href="<%=project_potentials_create_path%>" class="btn btn-primary px-3 pull-right">Submit</button>
            <a href="<%=project_potentials_path%>" class="btn btn-light pull-left">Cancel</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $(".form-rp").hide();
    $(".form-usd").hide();
});


$('.nilai').change(function() {
  if($('.nilai').val() == '') {
    $('.form-usd, .form-rp').hide();
  }
  if($('.nilai').val() == 'USD($)') {
    $('.form-rp').hide();
    $('.form-usd').show();
  }
  if($('.nilai').val() == 'IDR(RP)') {
    $('.form-rp').show();
    $('.form-usd').hide();
  }
});
</script>